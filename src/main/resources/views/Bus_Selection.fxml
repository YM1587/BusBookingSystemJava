<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.busbooking.controllers.BusSelectionController">

    <Label fx:id="routeLabel" text="Available Buses" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ScrollPane fitToWidth="true">
        <VBox fx:id="busListContainer" spacing="10.0" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>

</VBox>
