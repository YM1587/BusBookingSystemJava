<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busbooking.controllers.PassengerDetailsController"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Passenger Details Confirmation"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="ID Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="idLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="phoneLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Seat Selected:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="seatLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="From:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="fromLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="To:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="toLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Date:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="dateLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Departure Time:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Label fx:id="timeLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Fare:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <Label fx:id="fareLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="proceedButton" text="Proceed to Pay"
            onAction="#handleProceedToPayment"
            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>