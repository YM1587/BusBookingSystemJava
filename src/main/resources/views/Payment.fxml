<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.busbooking.controllers.PaymentController">

    <!-- Booking Summary Section -->
    <Label text="Booking Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- GridPane for booking details -->
    <GridPane hgap="10" vgap="15" alignment="CENTER"> <!-- Increased vgap for vertical spacing -->
        <Label text="From:" />
        <Label fx:id="lblFrom" text="-" GridPane.columnIndex="1" />

        <Label text="To:" />
        <Label fx:id="lblTo" text="-" GridPane.columnIndex="3" />

        <Label text="Date:" />
        <Label fx:id="lblDate" text="-" GridPane.columnIndex="5" />

        <Label text="Departure Time:" />
        <Label fx:id="lblTime" text="-" GridPane.columnIndex="7" />

        <Label text="Tickets:" />
        <Label fx:id="lblTickets" text="-" GridPane.columnIndex="9" />

        <Label text="Total Amount:" />
        <Label fx:id="lblAmount" text="-" GridPane.columnIndex="11" />
    </GridPane>

    <!-- Payment Form -->
    <Label text="Enter Payment Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <VBox spacing="10" alignment="CENTER">
        <Label text="Amount Paid:" />
        <TextField fx:id="txtAmount" promptText="Enter amount" />

        <Label text="Transaction Reference:" />
        <TextField fx:id="txtReference" promptText="Enter transaction reference" />

        <!-- Error message -->
        <Label fx:id="lblError" text="" style="-fx-text-fill: red;" />

        <Button text="Finish Payment" fx:id="btnFinishPayment" />

        <!-- New button to display receipt -->
        <Button text="Display Receipt" fx:id="btnDisplayReceipt" />
    </VBox>

</VBox>
